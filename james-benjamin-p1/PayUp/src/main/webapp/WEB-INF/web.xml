<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>PayUp</display-name>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>dev.benjamin.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Request</servlet-name>
        <servlet-class>dev.benjamin.servlets.RequestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>dev.benjamin.servlets.UserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminRequest</servlet-name>
        <servlet-class>dev.benjamin.servlets.AdminRequest</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Request</servlet-name>
        <url-pattern>/requests</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminRequest</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>





<welcome-file-list>
    <welcome-file>index.html</welcome-file>
</welcome-file-list>
</web-app>
